<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:text="TITULO APP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="60dp"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/imagenprueba" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:paddingTop="20dp"
            android:text="User"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/inputUserLogin"
            android:layout_width="1138dp"
            android:layout_height="79dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Password"
            android:textSize="30dp"

            />

        <EditText
            android:id="@+id/inputPasswordLogin"
            android:layout_width="1138dp"
            android:layout_height="88dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layoutLogin"
        android:layout_marginTop="23dp"
        android:paddingLeft="30dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tiene cuenta? Regístrate"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Has olvidado tu contraseña? Recupérala"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/black"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        


    </LinearLayout>



</RelativeLayout>